rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção 'casas'
    match /casas/{casaId} {
      // Permite leitura pública (mude se quiser autenticação)
      allow read: if true;
      
      // Permite escrita apenas se os dados forem válidos
      // Recomendado: Adicionar autenticação 'allow write: if request.auth != null;'
      allow create, update: if request.resource.data.titulo is string
                         && request.resource.data.preco is number;
                         
      // Restringe exclusão (exemplo: apenas admin ou dono)
      allow delete: if false; // Mude conforme necessário
    }
  }
}
